{{#> main}}
  {{#*inline "content"}}
    <div class="container mt-5">
      <div class="row">
        <div class="col-md-6">
          <img src="{{jogo.img_url}}" alt="{{jogo.nome}}" class="img-fluid rounded" width="100%">
        </div>
        <div class="col-md-6">
          <h1>{{jogo.nome}}</h1>
          <p><strong>Gênero:</strong> {{jogo.genero}}</p>
          <p><strong>Plataforma:</strong> {{jogo.plataforma}}</p>
          <p><strong>Desenvolvedor:</strong> {{jogo.desenvolvedor}}</p>
          <p><strong>Data de Lançamento:</strong> {{jogo.data_lanc}}</p>
          <p class="lead"><strong>Preço:</strong> R$ {{jogo.preco}}</p>
          <p>{{jogo.descricao}}</p>
          
          <!-- Formulário para adicionar ao carrinho -->
          <form action="/cart/add" method="POST" class="mt-4">
  <input type="hidden" name="id" value="{{jogo.id}}">
  <input type="hidden" name="name" value="{{jogo.nome}}">
  <input type="hidden" name="price" value="{{jogo.preco}}">
  <div class="d-flex align-items-center">
    <label for="quantidade" class="me-3"><strong>Quantidade:</strong></label>
    <input
      id="quantidade"
      name="quantity"
      type="number"
      class="form-control text-center me-3"
      min="1"
      value="1"
      style="max-width: 4rem;">
    <button
  class="btn btn-outline-dark add-to-cart"
  data-id="{{jogo.id}}"
  data-name="{{jogo.nome}}"
  data-price="{{jogo.preco}}"
  data-quantity="1"
>
  <i class="bi-cart-fill me-1"></i> Adicionar ao Carrinho
</button>
  </div>
</form>

        </div>
      </div>
    </div>
  {{/inline}}
{{/main}}
